generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               String       @id @default(cuid())
  walletAddress    String       @unique
  role             UserRole     @default(USER)
  upiId            String?      
  profileCompleted Boolean      @default(false)
  createdAt        DateTime     @default(now())
  updatedAt        DateTime     @updatedAt
  lastLoginAt      DateTime?
  
  // Relations
  orders       Order[]
  bankDetails  BankDetails?
  
  @@map("users")
}

model BankDetails {
  id                String   @id @default(cuid())
  userId            String   @unique
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  accountNumber     String
  ifscCode          String
  branchName        String
  accountHolderName String
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  
  @@map("bank_details")
}

model Order {
  id                    String      @id @default(cuid())
  userId                String
  blockchainOrderId     String?     // Blockchain order ID
  user                  User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  amount                Decimal
  usdtAmount            Decimal?
  orderType             OrderType
  status                OrderStatus @default(PENDING)
  paymentProof          String?
  adminUpiId            String?
  adminBankDetails      String?
  adminNotes            String?
  buyRate               Decimal?
  sellRate              Decimal?
  // Blockchain tracking
  isVerifiedOnChain     Boolean     @default(false)
  isCompletedOnChain    Boolean     @default(false)
  transactionHash       String?     // Transaction hash for USDT transfer
  createdAt             DateTime    @default(now())
  updatedAt             DateTime    @updatedAt
  
  @@map("orders")
}

model Rate {
  id          String      @id @default(cuid())
  type        RateType    
  currency    CurrencyType @default(UPI)
  buyRate     Decimal
  sellRate    Decimal
  updatedBy   String      // Admin user ID who updated the rate
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  
  @@unique([type, currency]) // Only one rate per type-currency combination
  @@map("rates")
}

enum UserRole {
  USER
  ADMIN
}

enum OrderType {
  BUY_UPI
  BUY_CDM
  SELL
}

enum OrderStatus {
  PENDING
  ADMIN_APPROVED
  ADMIN_SENT_PAYMENT_INFO
  PAYMENT_SUBMITTED
  PAYMENT_VERIFIED
  USDT_TRANSFERRED
  USDT_RECEIVED_BY_ADMIN
  PENDING_ADMIN_PAYMENT
  COMPLETED
  CANCELLED
}

enum RateType {
  CURRENT
}

enum CurrencyType {
  UPI
  CDM
}
